<% if urban_definitions&.any? %>
  <div class="mt-8 pt-6 border-t border-gray-200">
    <h3 class="text-lg font-medium text-gray-700 mb-3">
      Alternative Definition
      <span class="text-sm font-normal text-gray-500">
        — Powered by Urban Dictionary
      </span>
    </h3>
    
    <div class="space-y-6">
      <% urban_definitions.each do |definition| %>
        <div class="bg-gray-50 rounded-lg p-4">
          <div class="prose prose-sm max-w-none text-gray-700">
            <%= simple_format(definition[:content]) %>
            
            <% if definition[:example].present? %>
              <div class="mt-2 text-gray-600 italic">
                <%= simple_format(definition[:example]) %>
              </div>
            <% end %>
          </div>
          
          <div class="mt-3 flex items-center justify-between text-sm">
            <div class="text-gray-500">
              by <%= definition[:author] %>
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="flex items-center space-x-4 text-gray-500">
                <span class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
                  </svg>
                  <%= definition[:thumbs_up] %>
                </span>
                
                <span class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M18 9.5a1.5 1.5 0 11-3 0v-6a1.5 1.5 0 013 0v6zM14 9.667v-5.43a2 2 0 00-1.105-1.79l-.05-.025A4 4 0 0011.055 2H5.64a2 2 0 00-1.962 1.608l-1.2 6A2 2 0 004.44 12H8v4a2 2 0 002 2 1 1 0 001-1v-.667a4 4 0 01.8-2.4l1.4-1.866a4 4 0 00.8-2.4z" />
                  </svg>
                  <%= definition[:thumbs_down] %>
                </span>
              </div>

              <%= link_to "See more definitions →", definition[:term_url], 
                  target: "_blank",
                  class: "ml-4 text-blue-600 hover:text-blue-800 hover:underline" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %> 