<header class="bg-white shadow">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between">
      <div class="flex">
        <div class="flex flex-shrink-0 items-center">
          <%= link_to root_path, class: "text-xl font-bold text-gray-900" do %>
            Devil's Dictionary
          <% end %>
        </div>
        
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <%= link_to "Home", root_path, 
              class: "inline-flex items-center border-b-2 #{current_page?(root_path) ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} px-1 pt-1 text-sm font-medium" %>
          
          <%= link_to "Topics", topics_path,
              class: "inline-flex items-center border-b-2 #{current_page?(topics_path) ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} px-1 pt-1 text-sm font-medium" %>
        </div>
      </div>

      <%# Add search form %>
      <div class="flex flex-1 justify-center px-2 lg:ml-6 lg:justify-end items-center">
        <div class="relative w-full max-w-lg lg:max-w-xs" data-controller="autocomplete">
          <div class="flex h-9">
            <div class="pointer-events-none absolute inset-y-0 flex items-center left-3 h-9">
              <svg class="h-4 w-4 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
              </svg>
            </div>
            <%= text_field_tag :search, nil,
                class: "block w-full h-9 rounded-md border-0 py-1.5 pl-9 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6",
                placeholder: "Search topics...",
                autocomplete: "off",
                data: { 
                  autocomplete_target: "input",
                  action: "input->autocomplete#search"
                } %>
          </div>
          <div data-autocomplete-target="results" class="hidden absolute top-full left-0 right-0 z-50 mt-1 bg-white rounded-md shadow-lg ring-1 ring-black/5"></div>
        </div>
      </div>

      <div class="hidden sm:ml-6 sm:flex sm:items-center">
        <%# User authentication will be added here later %>
        <%= link_to "About", "#", 
            class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      </div>
    </div>
  </nav>
</header> 