<header class="bg-white shadow">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between">
      <div class="flex">
        <div class="flex flex-shrink-0 items-center">
          <%= link_to root_path, class: "text-xl font-bold" do %>
            Devil's Dictionary
          <% end %>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <%= link_to "Home", root_path, class: "inline-flex items-center border-b-2 #{current_page?(root_path) ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} px-1 pt-1 text-sm font-medium" %>
        </div>
      </div>
      
      <div class="hidden sm:ml-6 sm:flex sm:items-center space-x-4">
        <%= render "shared/search_form" %>
        
        <% if Current.user %>
          <%= button_to "Logout", session_path, 
              method: :delete, 
              class: "inline-flex items-center border-b-2 border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 px-1 pt-1 text-sm font-medium" %>
        <% else %>
          <%= link_to "Login", new_session_path, 
              class: "inline-flex items-center border-b-2 #{current_page?(new_session_path) ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} px-1 pt-1 text-sm font-medium" %>
        <% end %>
      </div>

      <div class="-mr-2 flex items-center sm:hidden">
        <button type="button" class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" aria-controls="mobile-menu" aria-expanded="false" data-action="click->mobile-menu#toggle">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <div class="sm:hidden" id="mobile-menu" data-mobile-menu-target="menu">
    <div class="space-y-1 pb-3 pt-2">
      <%= link_to "Home", root_path, class: "block border-l-4 #{current_page?(root_path) ? 'border-indigo-500 bg-indigo-50 text-indigo-700' : 'border-transparent text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700'} py-2 pl-3 pr-4 text-base font-medium" %>
      
      <% if Current.user %>
        <%= button_to "Logout", session_path, 
            method: :delete, 
            class: "w-full text-left block border-l-4 border-transparent text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700 py-2 pl-3 pr-4 text-base font-medium" %>
      <% else %>
        <%= link_to "Login", new_session_path, 
            class: "block border-l-4 #{current_page?(new_session_path) ? 'border-indigo-500 bg-indigo-50 text-indigo-700' : 'border-transparent text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700'} py-2 pl-3 pr-4 text-base font-medium" %>
      <% end %>
    </div>
  </div>
</header> 
</header> 