<div class="sticky top-0 z-40 flex h-16 shrink-0 items-center gap-x-4 border-b border-gray-200 bg-white px-4 shadow-sm sm:gap-x-6 sm:px-6 lg:px-8">
  <!-- Mobile menu button -->
  <button type="button" class="-m-2.5 p-2.5 text-gray-700 lg:hidden" data-action="mobile-menu#open">
    <span class="sr-only">Open sidebar</span>
    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
    </svg>
  </button>

  <!-- Separator -->
  <div class="h-6 w-px bg-gray-200 lg:hidden" aria-hidden="true"></div>

  <div class="flex flex-1 gap-x-4 self-stretch lg:gap-x-6">
    <!-- Search form -->
    <div class="relative flex flex-1" data-controller="autocomplete">
      <label for="search-field" class="sr-only">Search</label>
      <svg class="pointer-events-none absolute inset-y-0 left-0 h-full w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
      </svg>
      <input type="search" 
             name="query" 
             id="search-field"
             class="block h-full w-full border-0 py-0 pl-8 pr-0 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm"
             placeholder="Search..."
             autocomplete="off"
             data-autocomplete-target="input"
             data-action="click->autocomplete#search input->autocomplete#search">
      
      <div data-autocomplete-target="results" class="hidden absolute left-0 z-50 mt-2 w-full overflow-hidden rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5"></div>
    </div>

    <div class="flex items-center gap-x-4 lg:gap-x-6">
      <!-- Profile dropdown -->
      <div class="relative flex-shrink-0">
        <div class="flex items-center">
          <div class="hidden lg:block lg:text-sm lg:font-semibold lg:leading-6 lg:text-gray-900">
            <%= Current.user.email_address %>
          </div>
          <div class="relative ml-4 h-8 w-8 rounded-full bg-gray-50">
            <%= image_tag gravatar_url_for(Current.user.email_address), class: "h-8 w-8 rounded-full" %>
            <div class="absolute bottom-0 right-0 h-2 w-2 rounded-full bg-green-400 ring-1 ring-white"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 