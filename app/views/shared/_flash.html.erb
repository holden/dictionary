<% flash.each do |type, message| %>
  <div class="fixed top-0 left-0 right-0 z-50 px-4 pt-6" 
       data-controller="flash"
       data-flash-target="message">
    <div class="mx-auto max-w-sm rounded-lg bg-white p-4 shadow-lg ring-1 ring-black ring-opacity-5">
      <div class="flex items-center justify-between gap-4">
        <div class="flex items-center gap-4">
          <% if type.to_s == "notice" %>
            <div class="text-green-500">âœ“</div>
          <% else %>
            <div class="text-red-500">!</div>
          <% end %>
          <p class="text-sm font-medium text-gray-900"><%= message %></p>
        </div>
        <button type="button" 
                class="text-gray-400 hover:text-gray-500"
                data-action="flash#dismiss">
          <span class="sr-only">Dismiss</span>
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
<% end %> 