<% content_for :title, "Poems - #{@topic.title}" %>

<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Poems</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all poems related to <%= @topic.title %></p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to "Search Poems", 
          search_poetrydb_concept_poems_path(@topic),
          class: "block rounded-md bg-blue-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
    </div>
  </div>

  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div id="poems" class="space-y-4">
          <% if @poems.any? %>
            <%= render partial: "poem", collection: @poems %>
          <% else %>
            <div class="text-center py-12">
              <p class="text-sm text-gray-500">No poems found. Try searching for some!</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 