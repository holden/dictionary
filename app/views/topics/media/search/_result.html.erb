<div class="flex items-center justify-between gap-4 py-4">
  <div class="flex items-center gap-4">
    <% if result[:metadata][:poster_path] %>
      <%= image_tag result[:metadata][:poster_path], 
          class: "h-16 w-16 rounded object-cover",
          alt: result[:title] %>
    <% end %>
    
    <div class="flex-1 min-w-0">
      <p class="text-sm font-medium text-gray-900">
        <%= result[:title] %>
      </p>
      <p class="text-sm text-gray-500">
        <%= result[:type] %>
        <% if result[:metadata][:release_date] %>
          • <%= result[:metadata][:release_date] %>
        <% elsif result[:metadata][:first_air_date] %>
          • <%= result[:metadata][:first_air_date] %>
        <% end %>
      </p>
      <% if result[:metadata][:overview].present? %>
        <p class="mt-1 text-sm text-gray-500 line-clamp-2">
          <%= result[:metadata][:overview] %>
        </p>
      <% end %>
    </div>
  </div>

  <%= button_to send("#{@topic.route_key}_media_path", @topic),
      params: { media: result },
      class: "rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-blue-600 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
    Add
  <% end %>
</div> 