<%= turbo_frame_tag dom_id(medium) do %>
  <div class="flex items-center justify-between gap-4 py-4">
    <div class="flex items-center gap-4">
      <% if medium.metadata['poster_path'] %>
        <%= image_tag medium.metadata['poster_path'], 
            class: "h-16 w-16 rounded object-cover",
            alt: medium.title %>
      <% end %>
      
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-900">
          <%= medium.title %>
        </p>
        <p class="text-sm text-gray-500">
          <%= medium.type %>
          <% if medium.metadata['release_date'] %>
            • <%= medium.metadata['release_date'] %>
          <% elsif medium.metadata['first_air_date'] %>
            • <%= medium.metadata['first_air_date'] %>
          <% end %>
        </p>
      </div>
    </div>

    <%= button_to send("#{@topic.route_key}_medium_path", @topic, medium),
        method: :delete,
        class: "rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-red-600 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50",
        data: { turbo_confirm: "Are you sure you want to remove this media?" } do %>
      Remove
    <% end %>
  </div>
<% end %> 