<div class="flex items-center justify-between gap-4 py-4">
  <div class="flex items-center gap-4">
    <% if result[:metadata][:poster_path].present? %>
      <%= image_tag result[:metadata][:poster_path], 
          class: "h-16 w-16 rounded object-cover",
          alt: result[:title] %>
    <% else %>
      <%= image_tag 'https://placehold.co/400x600/png?text=No+Poster',
          class: "h-16 w-16 rounded object-cover",
          alt: result[:title] %>
    <% end %>
    
    <div class="flex-1 min-w-0">
      <p class="text-sm font-medium text-gray-900">
        <%= result[:title] %>
      </p>
      <p class="text-sm text-gray-500">
        <%= result[:type] %>
        <% if result[:metadata][:release_date].present? %>
          â€¢ <%= result[:metadata][:release_date] %>
        <% end %>
      </p>
    </div>
  </div>

  <%= button_to send("#{@topic.route_key}_media_path", @topic),
      params: { media: {
        title: result[:title],
        type: result[:type],
        source_id: result[:source_id],
        metadata: result[:metadata]
      }},
      class: "rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-blue-600 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
    Add
  <% end %>
</div> 