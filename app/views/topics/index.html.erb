<div class="min-h-screen bg-gray-50">
  <%# Top Navigation %>
  <nav class="sticky top-0 z-50 bg-white shadow-md">
    <div class="container mx-auto px-4 py-3">
      <div class="flex items-center justify-between">
        <%# Title %>
        <h1 class="text-2xl font-bold text-gray-900">New Devil's Dictionary</h1>
        
        <%# Navigation Links %>
        <div class="flex space-x-6">
          <%= link_to "Home", root_path, 
              class: "text-gray-600 hover:text-gray-900 transition-colors" %>
          <%= link_to "About", "#", 
              class: "text-gray-600 hover:text-gray-900 transition-colors" %>
        </div>
      </div>
    </div>
  </nav>

  <%# Main Content %>
  <main class="container mx-auto px-4 py-8">
    <div class="space-y-12">
      <% @topics.each do |letter, topics| %>
        <section id="<%= letter %>" class="scroll-mt-16">
          <h2 class="text-3xl font-bold mb-6 text-gray-800 border-b pb-2"><%= letter %></h2>
          
          <div class="space-y-8">
            <% topics.each do |topic| %>
              <article class="bg-white rounded-lg shadow-sm p-6">
                <header class="mb-4">
                  <h3 class="text-xl font-bold text-gray-900">
                    <%= topic.title %>
                    <span class="text-sm font-normal text-gray-500">
                      (<%= abbreviate_part_of_speech(topic.part_of_speech) %>.)
                    </span>
                  </h3>
                </header>

                <% topic.definitions.each do |definition| %>
                  <div class="prose prose-lg max-w-none text-gray-700">
                    <%= definition.content %>
                    
                    <div class="mt-2 text-sm text-gray-500">
                      <% if definition.author %>
                        â€” <%= definition.author.title %>,
                      <% end %>
                      <% if definition.source %>
                        <%= definition.source.title %>
                        <% if definition.source.is_a?(Book) && definition.source.published_date %>
                          (<%= definition.source.published_date.year %>)
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </article>
            <% end %>
          </div>
        </section>
      <% end %>
    </div>
  </main>
</div>

<%# Vertical Alphabet Navigation %>
<nav class="hidden lg:block fixed right-4 top-1/2 transform -translate-y-1/2 space-y-1">
  <% @letters.each do |letter| %>
    <%= link_to letter, "##{letter}", 
        class: "block w-8 h-8 text-center leading-8 rounded hover:bg-gray-100 
                transition-colors text-sm text-gray-600 hover:text-gray-900" %>
  <% end %>
</nav> 