<div class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4">
    <article class="bg-white rounded-lg shadow-lg p-8">
      <header class="mb-6 flex items-start justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-900">
            <%= @topic.title %>
            <span class="text-lg font-normal text-gray-500">
              (<%= abbreviate_part_of_speech(@topic.part_of_speech) %>.)
            </span>
          </h1>
          <p class="text-gray-600 mt-2">Action or Activity</p>
        </div>
        
        <% if @gifs&.any? && gif = @gifs.first %>
          <div class="w-64">
            <%= image_tag gif[:url], 
                class: "rounded-lg shadow-md", 
                alt: @topic.title,
                width: gif[:width],
                height: gif[:height] %>
          </div>
        <% end %>
      </header>

      <%= render 'shared/topic_content', topic: @topic, gifs: @gifs %>
    </article>
  </div>
</div> 