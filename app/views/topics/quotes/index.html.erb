<% content_for :title, "Quotes - #{@topic.title}" %>

<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Quotes</h1>
      <p class="mt-2 text-sm text-gray-700">A collection of quotes about <%= @topic.display_title %></p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to send("search_wikiquotes_#{@topic.route_key}_quotes_path", @topic),
          class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
        <span class="flex items-center gap-x-1">
          <svg class="-ml-0.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
          </svg>
          Add quote
        </span>
      <% end %>
    </div>
  </div>

  <div class="mt-6 space-y-4">
    <% @quotes.each do |quote| %>
      <%= turbo_frame_tag quote do %>
        <div class="bg-white px-4 py-5 sm:px-6 shadow rounded-lg">
          <div class="grid grid-cols-[1fr,200px,auto] gap-6 items-start">
            <!-- Quote content -->
            <div>
              <div class="text-sm text-gray-900">
                <%= quote.content.to_plain_text %>
              </div>
              <div class="mt-2 text-xs text-gray-500">
                Added by <%= quote.user.email_address %> â€¢ <%= time_ago_in_words(quote.created_at) %> ago
              </div>
            </div>

            <!-- Author and citation -->
            <div class="text-sm">
              <div class="font-medium text-gray-900">
                <% if quote.author %>
                  <%= link_to quote.author.display_title,
                      send("#{quote.author.route_key}_path", quote.author),
                      class: "hover:underline" %>
                <% else %>
                  <%= quote.attribution_text %>
                <% end %>
              </div>
              <% if quote.citation.present? %>
                <div class="mt-1 text-gray-500"><%= quote.citation %></div>
              <% end %>
              <% if quote.source_url.present? %>
                <%= link_to "View on Wikiquote", quote.source_url,
                    class: "mt-1 inline-block text-indigo-600 hover:text-indigo-900",
                    target: "_blank" %>
              <% end %>
            </div>

            <!-- Actions -->
            <div class="flex justify-end">
              <%= button_to send("#{@topic.route_key}_quote_path", @topic, quote),
                  method: :delete,
                  class: "rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-red-600 shadow-sm ring-1 ring-inset ring-red-300 hover:bg-red-50",
                  data: { turbo_confirm: "Are you sure?" } do %>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div> 