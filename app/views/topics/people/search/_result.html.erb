<div class="flex items-center justify-between gap-4 py-4">
  <div class="flex items-center gap-4">
    <% if result[:profile_path] %>
      <%= image_tag result[:profile_path], class: "h-16 w-16 rounded-full object-cover" %>
    <% end %>
    
    <div class="flex-1 min-w-0">
      <p class="text-sm font-medium text-gray-900">
        <%= result[:name] %>
      </p>
      <p class="text-sm text-gray-500">
        <%= result[:known_for_department] %>
      </p>
    </div>
  </div>

  <%= button_to send("#{@topic.route_key}_people_path", @topic),
      params: { person: result },
      class: "rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-blue-600 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
    Add
  <% end %>
</div> 