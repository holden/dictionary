<div class="mt-6">
  <% if results.any? %>
    <div class="space-y-4">
      <% results.each do |result| %>
        <div class="bg-white px-4 py-5 sm:px-6 shadow rounded-lg">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-base font-semibold leading-6 text-gray-900">
                <%= result[:title] %>
              </h3>
              <p class="mt-1 text-sm text-gray-500">
                <%= result[:artist] %>
              </p>
            </div>
            <%= button_to send("#{@topic.route_key}_lyrics_path", @topic),
                params: { 
                  lyric: {
                    content: result[:title],
                    attribution_text: result[:attribution_text],
                    source_url: result[:source_url],
                    source_title: result[:source_title],
                    year_written: result[:year_written],
                    metadata: result[:metadata]
                  }
                },
                class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-indigo-600 shadow-sm ring-1 ring-inset ring-indigo-300 hover:bg-indigo-50" do %>
              Add Lyric
            <% end %>
          </div>
          <div class="mt-2 text-sm text-gray-500">
            <%= link_to "View on Genius", result[:url], 
                class: "text-indigo-600 hover:text-indigo-900",
                target: "_blank" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500">No results found.</p>
  <% end %>
</div> 