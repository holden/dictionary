<div id="search_results">
  <% if results.any? %>
    <div class="mt-4 space-y-4">
      <% results.each do |result| %>
        <div class="p-4 bg-white rounded-lg shadow">
          <div class="text-gray-900 text-lg">
            <%= result[:title] %>
          </div>

          <div class="mt-2 space-y-2 text-sm text-gray-600">
            <div>
              <span class="font-medium">By:</span> <%= result[:artist] %>
            </div>

            <div>
              <span class="font-medium">Source:</span>
              <%= link_to "View on Genius", result[:url], 
                  target: "_blank",
                  class: "text-blue-600 hover:text-blue-800" %>
            </div>

            <% if result[:year_written].present? %>
              <div>
                <span class="font-medium">Year:</span> <%= result[:year_written] %>
              </div>
            <% end %>
          </div>

          <%= button_to send("#{@topic.route_key}_lyrics_path", @topic), 
              params: { 
                lyric: {
                  content: result[:title],
                  attribution_text: result[:attribution_text],
                  source_url: result[:source_url],
                  source_title: result[:source_title],
                  year_written: result[:year_written],
                  metadata: result[:metadata]
                }
              },
              data: { turbo: false },
              class: "mt-4 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Add Lyric
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="mt-4 p-4 bg-gray-50 rounded-lg text-gray-600">
      No lyrics found
    </div>
  <% end %>
</div> 