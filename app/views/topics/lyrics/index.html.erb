<% content_for :title, "Lyrics - #{@topic.title}" %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header section -->
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Lyrics</h1>
      <p class="mt-2 text-sm text-gray-700">Lyrics related to <%= @topic.title %></p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to send("search_genius_#{@topic.route_key}_lyrics_path", @topic),
                  class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        Search Genius
      <% end %>
    </div>
  </div>

  <!-- Lyrics list -->
  <div class="mt-6 space-y-4">
    <% @lyrics.each do |lyric| %>
      <%= turbo_frame_tag lyric do %>
        <div class="bg-white px-4 py-5 sm:px-6 shadow rounded-lg">
          <!-- Title/Lyric -->
          <div class="text-base font-medium text-gray-900 mb-1">
            <%= lyric.content.to_plain_text %>
          </div>

          <!-- Author and actions -->
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-x-3 text-sm text-gray-500">
              <% if lyric.author %>
                <%= link_to lyric.author.title,
                    person_path(lyric.author),
                    class: "hover:underline" %>
              <% else %>
                <%= lyric.attribution_text %>
              <% end %>

              <% if lyric.source_url.present? %>
                <%= link_to "View on Genius", lyric.source_url,
                    class: "text-indigo-600 hover:text-indigo-900",
                    target: "_blank" %>
              <% end %>
            </div>

            <%= button_to "Delete",
                send("#{@topic.route_key}_lyric_path", @topic, lyric),
                method: :delete,
                class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-red-600 shadow-sm ring-1 ring-inset ring-red-300 hover:bg-red-50",
                data: { turbo_confirm: "Are you sure?" } %>
          </div>

          <!-- Metadata -->
          <div class="mt-1 text-xs text-gray-500">
            <% if lyric.source_title.present? %>
              <%= lyric.source_title %>
              <span class="mx-2">•</span>
            <% end %>
            Added by <%= lyric.user.email_address %> • <%= time_ago_in_words(lyric.created_at) %> ago
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div> 